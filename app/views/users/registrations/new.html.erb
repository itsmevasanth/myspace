<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, label: false, placeholder: 'First Name', autofocus: true %>
    <%= f.input :last_name, required: true, label: false, placeholder: 'Last Name' %>
    <%= f.input :email, required: true, label: false, placeholder: 'Email' %>
    <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Password' %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation' %>
    <%= f.input :phone_number, required: true, label: false, placeholder: 'Phone Number' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
